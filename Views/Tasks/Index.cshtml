@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<CaseWorkerTask>

<h1>My Task List</h1>
<a class="btn btn-primary" asp-action="Create">New Task</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Due Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Status</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id">Edit</a> 
                    <a asp-action="Details" asp-route-id="@task.Id">Details</a> 
                    <a asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                </td>
            </tr>
        }
       
    </tbody>
</table>

